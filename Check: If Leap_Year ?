// A simple program in C to check if a given year is a leap year or not

#include<stdio.h>
void main()
{
  int year;
  printf("Enter the year: ");
  scanf("%d", &year);

  if((year%4==0)&&(year%100!=0))
    printf("%d is a Leap Year\n", year);
  else if(year%400==0)
    printf("%d is a Leap Year\n", year);
  else
    printf("%d is not a Leap Year\n", year);
}
